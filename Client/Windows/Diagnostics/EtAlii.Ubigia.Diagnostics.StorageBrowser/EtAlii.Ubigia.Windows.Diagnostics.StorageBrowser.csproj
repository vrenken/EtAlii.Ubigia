<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <Import Project="$(SolutionDir)\Version.props" />

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    
    <Authors>Peter Vrenken</Authors>
    <Product>Ubigia</Product>
    <Company>EtAlii</Company>
    <Description>StorageBrowser</Description>
    <Copyright>Copyright ©2017 Peter Vrenken</Copyright>
    <ProjectGuid>a15e7ac6-b912-47c4-83ea-16851e6c3b88</ProjectGuid>
    <PackageProjectUrl />
    <PackageReleaseNotes />
    <PackageTags />
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <AssemblyName>EtAlii.Ubigia.Windows.Diagnostics.StorageBrowser</AssemblyName>
    <ApplicationIcon>Icon.ico</ApplicationIcon>
    <Win32Resource />
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="AvalonDock" Version="2.0.2000">
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="3.6.0">
      <NoWarn>NU1701</NoWarn> <!-- Remove this warning when the package has been updated to support netcore3.0 -->
    </PackageReference>
    <PackageReference Include="Fluent.Ribbon" Version="7.0.0" />
    <PackageReference Include="Grpc.Core" Version="2.24.0" />
    <PackageReference Include="Microsoft.VisualStudio.SlowCheetah" Version="3.2.20" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.3">
      <NoWarn>NU1701</NoWarn> <!-- This is a nested package. Remove when the warning is no longer needed -->
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\..\Api\0.0.0.1\EtAlii.Ubigia.Api.Transport.Management.Diagnostics\EtAlii.Ubigia.Api.Transport.Management.Diagnostics.csproj" />
    <ProjectReference Include="..\..\Shared\EtAlii.Ubigia.Windows.Management\EtAlii.Ubigia.Windows.Management.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Icon.ico" />
    <Content Include="Icon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <!-- Resources -->
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <Compile Update="Properties\Resources.Designer.cs">
      <DependentUpon>Resources.resx</DependentUpon>
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
    </Compile>
    <!-- Settings -->
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
    <Compile Update="Properties\Settings.Designer.cs">
      <DependentUpon>Settings.settings</DependentUpon>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>
</Project>