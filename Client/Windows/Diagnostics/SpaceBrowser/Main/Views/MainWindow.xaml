<f:RibbonWindow 
    x:Class="EtAlii.Servus.Client.Windows.Diagnostics.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:EtAlii.Servus.Windows.Diagnostics.SpaceBrowser.Views"
    xmlns:f="clr-namespace:Fluent;assembly=Fluent"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    xmlns:p="clr-namespace:EtAlii.Servus.Windows.Diagnostics.SpaceBrowser.Properties"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    Title="Servus - Space browser" 
    ResizeMode="CanResizeWithGrip"
    FlowDirection="LeftToRight"
    Height="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowHeight, Mode=TwoWay, FallbackValue=800}"
    Width="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowWidth, Mode=TwoWay, FallbackValue=1200}"
    Left="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowLeft, Mode=TwoWay}"
    Top="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowTop, Mode=TwoWay}"
    WindowState="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowState, Mode=TwoWay}"
    Initialized="OnWindowInitialized" Closing="OnWindowClosing" Icon="/SpaceBrowser;component/Icon-Logo.ico">
    
    <views:MainContent/>
    
</f:RibbonWindow>
