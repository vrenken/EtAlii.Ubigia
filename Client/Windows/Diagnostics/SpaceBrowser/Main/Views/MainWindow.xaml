<f:RibbonWindow 
    x:Class="EtAlii.Ubigia.Windows.Diagnostics.SpaceBrowser.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:EtAlii.Ubigia.Windows.Diagnostics.SpaceBrowser"
    xmlns:f="clr-namespace:Fluent;assembly=Fluent"
    xmlns:p="clr-namespace:EtAlii.Ubigia.Windows.Diagnostics.SpaceBrowser.Properties"
    Title="Ubigia - Space browser" 
    ResizeMode="CanResizeWithGrip"
    FlowDirection="LeftToRight"
    Height="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowHeight, Mode=TwoWay, FallbackValue=800}"
    Width="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowWidth, Mode=TwoWay, FallbackValue=1200}"
    Left="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowLeft, Mode=TwoWay}"
    Top="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowTop, Mode=TwoWay}"
    WindowState="{Binding Source={x:Static p:Settings.Default}, Path=MainWindowState, Mode=TwoWay}"
    Initialized="OnWindowInitialized" Closing="OnWindowClosing" Icon="pack://siteoforigin:,,,/Icon.ico">
    
    <views:MainContent/>
    
</f:RibbonWindow>
