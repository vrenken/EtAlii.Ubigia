<fluent:RibbonGroupBox 
    x:Class="EtAlii.Ubigia.Windows.Diagnostics.SpaceBrowser.EditCodeRibbonGroupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fluent="clr-namespace:Fluent;assembly=Fluent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    fluent:KeyTip.Keys="C"
    Header="Edit">
    <fluent:Button 
        Command="ApplicationCommands.Undo" 
        Header="Undo" 
        LargeIcon="pack://siteoforigin:,,,/Images/Command-Undo.png" />
    <fluent:Button 
        Command="ApplicationCommands.Redo" 
        Header="Redo" 
        LargeIcon="pack://siteoforigin:,,,/Images/Command-Redo.png" />
    <fluent:Button 
        Command="ApplicationCommands.Cut" 
        Header="Cut" 
        LargeIcon="pack://siteoforigin:,,,/Images/Instrument-Scissors.png" />
    <fluent:Button 
        Command="ApplicationCommands.Copy" 
        Header="Copy" 
        LargeIcon="pack://siteoforigin:,,,/Images/Command-Paste.png"/>
    <fluent:Button 
        Command="ApplicationCommands.Paste" 
        Header="Paste" 
        LargeIcon="pack://siteoforigin:,,,/Images/Clipboard-Next.png"/>
</fluent:RibbonGroupBox>