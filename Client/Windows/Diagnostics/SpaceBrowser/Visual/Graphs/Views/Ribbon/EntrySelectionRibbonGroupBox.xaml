<Fluent:RibbonGroupBox 
    x:Class="EtAlii.Servus.Client.Windows.Diagnostics.EntrySelectionRibbonGroupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
    xmlns:s="clr-namespace:System;assembly=mscorlib"  
    xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    DataContext="{Binding Configuration}"
    Fluent:KeyTip.Keys="S"
    Header="Selected entries">
    <Fluent:ToggleButton
        Header="Update"
        IsChecked="{Binding UpdateSelectedEntries}"
        LargeIcon="\Images\Icons\Command-Refresh-01.png" />

    <Fluent:ToggleButton
        Header="Expand"
        IsChecked="{Binding ExpandSelectedEntries}"
        LargeIcon="\Images\Icons\Flow-Cart.png" />

</Fluent:RibbonGroupBox>
