<fluent:RibbonGroupBox 
    x:Class="EtAlii.Ubigia.Windows.Diagnostics.SpaceBrowser.NewEntriesRibbonGroupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fluent="clr-namespace:Fluent;assembly=Fluent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    DataContext="{Binding Configuration}"
    d:DesignHeight="300" d:DesignWidth="300"
    fluent:KeyTip.Keys="S"
    Header="New entries">
    <fluent:ToggleButton
        Header="Add"
        IsChecked="{Binding AddNewEntries}"
        LargeIcon="pack://siteoforigin:,,,/Images/Share-01.png" />
    <fluent:ToggleButton
        Header="Expand"
        IsChecked="{Binding ExpandNewEntries}"
        LargeIcon="pack://siteoforigin:,,,/Images/Data-Share.png" />
</fluent:RibbonGroupBox>
