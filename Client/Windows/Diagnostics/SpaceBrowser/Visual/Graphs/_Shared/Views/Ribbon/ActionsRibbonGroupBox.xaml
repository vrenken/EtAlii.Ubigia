<Fluent:RibbonGroupBox 
    x:Class="EtAlii.Ubigia.Client.Windows.Diagnostics.ActionsRibbonGroupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    Fluent:KeyTip.Keys="S"
    Header="Actions">

    <Fluent:Button
        Header="Discover from tail"
        Command="{Binding Buttons.DiscoverFromTailCommand}"
        CommandParameter="{Binding}"
        LargeIcon="pack://siteoforigin:,,,/Images/Navigation-Down-Right.png" />

    <Fluent:Button
        Header="Discover from head"
        Command="{Binding Buttons.DiscoverFromHeadCommand}"
        CommandParameter="{Binding}"
        LargeIcon="pack://siteoforigin:,,,/Images/Navigation-Up-Left.png" />
</Fluent:RibbonGroupBox>
