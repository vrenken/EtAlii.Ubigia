{
  "Host": 
  {
    "Systems": [
      {
        "Factory": "EtAlii.Ubigia.Infrastructure.Transport.InfrastructureSystemFactory, EtAlii.Ubigia.Infrastructure.Transport",
        "Services": [
          {
            "Factory": "EtAlii.Ubigia.Infrastructure.Transport.InMemory.StorageServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.InMemory",
            "Name": "Debug storage",
            "BaseFolder": "{{FOLDER:StorageFolder@%LOCALAPPDATA%\\EtAlii\\Ubigia}}"
          },
          {
            "Factory": "EtAlii.Ubigia.Infrastructure.Transport.InfrastructureServiceFactory, EtAlii.Ubigia.Infrastructure.Transport",
            "Name": "Debug storage",
            "Address": "http://{{HOST:AdminHost@127.0.0.1}}"
          },
          {
            "Factory": "EtAlii.Ubigia.Infrastructure.Transport.NetCore.AuthenticationServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.NetCore",
            "IpAddress": "{{HOST:AuthenticationHost@0.0.0.0}}",
            "Port": "{{PORT:AuthenticationPort@64002}}"
          }],
        "Modules": [
          {
            "Factory": "EtAlii.Ubigia.Infrastructure.Transport.Admin.NetCore.AdminModuleFactory, EtAlii.Ubigia.Infrastructure.Transport.Admin.NetCore",
            "Name": "Admin",
            "####Comment": "// Admin should be accessible over localhost only",
            "IpAddress": "{{HOST:AdminHost@127.0.0.1}}",
            "Port": "{{PORT:AdminPort@64001}}",
            
            "Modules": [
              {
                "Name": "Api",
                "Services": [
                  {
                    "Factory": "EtAlii.Ubigia.Infrastructure.Transport.Admin.Api.Rest.AdminRestServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.Admin.Api.Rest"
                  },
                  {
                    "Factory": "EtAlii.Ubigia.Infrastructure.Transport.Admin.Api.SignalR.AdminSignalRServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.Admin.Api.SignalR"
                  }
                ]
              },
              {
                "Name": "Portal",
                "Services": [
                  {
                    "Factory": "EtAlii.Ubigia.Infrastructure.Transport.Admin.Portal.Razor.AdminPortalControllerServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.Admin.Portal.Razor"
                  },
                  {
                    "Factory": "EtAlii.Ubigia.Infrastructure.Transport.Admin.Portal.Razor.AdminPortalFileHostingServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.Admin.Portal.Razor"                    
                  }
                ]                
              }
            ]
          },
          {
            "Factory": "EtAlii.Ubigia.Infrastructure.Transport.User.NetCore.UserModuleFactory, EtAlii.Ubigia.Infrastructure.Transport.User.NetCore",
            "Name": "User",
            "IpAddress": "{{HOST:UserHost@0.0.0.0}}",
            "Port": "{{PORT:UserPort@64000}}",
            "Modules": [
              {
                "Name": "Api",
                "Services": [
                  {
                    "Factory": "EtAlii.Ubigia.Infrastructure.Transport.User.Api.Rest.UserRestServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.User.Api.Rest"
                  },
                  {
                    "Factory": "EtAlii.Ubigia.Infrastructure.Transport.User.Api.SignalR.UserSignalRServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.User.Api.SignalR"
                  }
                ]
              },
              {
                "Name": "Portal",
                "Services": [
                  {
                    "Factory": "EtAlii.Ubigia.Infrastructure.Transport.User.Portal.Razor.UserPortalControllerServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.User.Portal.Razor"
                  },
                  {
                    "Factory": "EtAlii.Ubigia.Infrastructure.Transport.User.Portal.Razor.UserPortalFileHostingServiceFactory, EtAlii.Ubigia.Infrastructure.Transport.User.Portal.Razor"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
    "Logging": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  }

