<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <sectionGroup name="ubigia">
      <section name="host" type="EtAlii.xTechnology.Hosting.HostConfigurationSection, EtAlii.xTechnology.Hosting.ConsoleHost" />
      <section name="infrastructure" type="EtAlii.Ubigia.Infrastructure.Transport.Owin.WebApi.InfrastructureConfigurationSection, EtAlii.Ubigia.Infrastructure.Transport.Owin.WebApi" />
      <section name="storage" type="EtAlii.Ubigia.Storage.Ntfs.StorageConfigurationSection, EtAlii.Ubigia.Storage.Ntfs" />
    </sectionGroup>
    
  </configSections>

  <ubigia>
    <host />
    <infrastructure name="" account="" password="" address="" />
    <storage name="" baseFolder="" />
  </ubigia>

  <ubigia2>
    <infrastructure name="" account="" password="" address="" >
      <storage name="" baseFolder="" />
      <services>
        <WebApi>
          <AdminApi />
          <AdminPortal />
          <UserApi />
          <UserPortal />
        </WebApi>
        <SignalR>
          <AdminApi />
          <UserApi />
        </SignalR>
        <Grpc>
          <AdminApi />
          <UserApi />
        </Grpc>
      </services>
    </infrastructure>
    <provisioning />
  </ubigia2>

