<fluent:RibbonGroupBox 
    x:Class="EtAlii.Ubigia.Windows.Diagnostics.SpaceBrowser.RelationsRibbonGroupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fluent="clr-namespace:Fluent;assembly=Fluent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    fluent:KeyTip.Keys="C"
    DataContext="{Binding Configuration}"
    Header="Relations">

    <fluent:ToggleButton 
        Header="Hierarchical"
        IsChecked="{Binding ShowHierarchical}"
        Icon="pack://siteoforigin:,,,/Images/Graph-Diagram.png" 
        LargeIcon="pack://siteoforigin:,,,/Images/Graph-Diagram.png" />
    <fluent:ToggleButton 
        Header="Sequential"
        IsChecked="{Binding ShowSequential}"
        Icon="pack://siteoforigin:,,,/Images/Arrow-Expand.png" 
        LargeIcon="pack://siteoforigin:,,,/Images/Arrow-Expand.png" />
    <fluent:ToggleButton 
        Header="Temporal"
        IsChecked="{Binding ShowTemporal}"
        Icon="pack://siteoforigin:,,,/Images/Clock-01.png" 
        LargeIcon="pack://siteoforigin:,,,/Images/Clock-01.png" />
</fluent:RibbonGroupBox>
