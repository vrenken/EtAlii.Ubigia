<fluent:RibbonGroupBox 
    x:Class="EtAlii.Ubigia.Windows.Diagnostics.SpaceBrowser.ActionsRibbonGroupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fluent="clr-namespace:Fluent;assembly=Fluent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    fluent:KeyTip.Keys="S"
    Header="Actions">

    <fluent:Button
        Header="Discover from tail"
        Command="{Binding Buttons.DiscoverFromTailCommand}"
        CommandParameter="{Binding}"
        Icon="pack://siteoforigin:,,,/Images/Navigation-Down-Right.png" 
        LargeIcon="pack://siteoforigin:,,,/Images/Navigation-Down-Right.png" />

    <fluent:Button
        Header="Discover from head"
        Command="{Binding Buttons.DiscoverFromHeadCommand}"
        CommandParameter="{Binding}"
        Size="Large"
        Icon="pack://siteoforigin:,,,/Images/Navigation-Up-Left.png" 
        LargeIcon="pack://siteoforigin:,,,/Images/Navigation-Up-Left.png" />
</fluent:RibbonGroupBox>
