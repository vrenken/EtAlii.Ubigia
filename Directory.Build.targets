<!-- Stuff that needs to happen at the end of the MSBuild process should go in the .targets file. -->
<Project>
  <PropertyGroup>
  </PropertyGroup>
  
  
  <!-- We want to do a bit of xunit magic. So let's add all test relevant packages in one central place -->
  <ItemGroup Condition="$(MSBuildProjectName.EndsWith('.Tests')) OR $(MSBuildProjectName.EndsWith('.Tests.Docker')) OR $(MSBuildProjectName.EndsWith('.Tests.Local'))">

    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.7.1" Label="Microsoft.NET.Test.Sdk (.targets)" />
    <PackageReference Include="xunit" Version="2.4.1" Label="Xunit.Version (.targets)" />
    <PackageReference Include="xunit.assert" Version="2.4.1" Label="Xunit.Assert (.targets)" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3" Label="Xunit.Runner.Visualstudio (.targets)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="coverlet.collector" Version="1.3.0" Label="Coverlet.Collector (.targets)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <!--    <DotNetCliToolReference Include="dotnet-xunit" Version="2.3.1" />-->
  </ItemGroup>
</Project>