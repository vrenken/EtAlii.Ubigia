<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>$(UbigiaNetCoreAppVersion)</TargetFramework>
    <GeneratePackageOnBuild>$(UbigiaBuildPackages)</GeneratePackageOnBuild>
    <OutputType>Library</OutputType>
    <ProjectGuid>28E8DEB8-2B23-4A99-8d71-40F3AE3DF2B5</ProjectGuid>
    <Description>Package that contains everything needed to enable GRPC based hosting.</Description>
    <PackageTags>hosting GRPC NetCore Protobuf</PackageTags>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grpc" Version="2.32.0" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.31.0" />
    <PackageReference Include="Grpc.Tools" Version="2.32.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\EtAlii.xTechnology.Hosting\EtAlii.xTechnology.Hosting.csproj" />
  </ItemGroup>
</Project>